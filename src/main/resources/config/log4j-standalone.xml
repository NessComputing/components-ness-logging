<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     threshold="trace">
  <!-- the threshold level above sets the global logging cutoff -->

  <!-- configure console logging -->
  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <!-- the following line contains tabs. They are used for grepp'ing through the output, -->
      <!-- so *DON'T* replace them with spaces! -->
      <param name="ConversionPattern" value="%d{ISO8601}	%p	%t	%c	%m%n" />
    </layout>
  </appender>

  <!--  set the root logger -->
  <root>
    <level value="info" />
    <appender-ref ref="CONSOLE" />
  </root>
</log4j:configuration>
